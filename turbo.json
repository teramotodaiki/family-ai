{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env*", "tsconfig.json"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
